<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaTTAN_Room_Displays.MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <StackLayout>
        <Grid RowSpacing="25" RowDefinitions="100,400,200,100"
              Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">

            <Label 
                Grid.Row="0"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="72"
                HorizontalOptions="Start"
				VerticalOptions="Start"
				x:Name="RoomNameLabel" />
			    

            <Label 
				x:Name="EventTitleLabel"
                Grid.Row="1"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description=""
                FontSize="60"
				VerticalOptions="End"
                HorizontalOptions="Center" />

			<Label
				x:Name="EventTimeLabel"
				Text="Lancaster Room"
	            Grid.Row="2"
	            FontSize="60"
	            FontAttributes="Bold"
				VerticalOptions="Start"
	            HorizontalOptions="Center" />
			
			<Label
	            Grid.Row="3"
	            FontSize="60"
	            FontAttributes="Bold"
	            x:Name="DateTimeLabel"
	            HorizontalOptions="Center" />

        </Grid>
    </StackLayout>
</ContentPage>
