<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaTTAN_Room_Displays.MainPage"
             BackgroundColor=" #b8daff"
             >

    <StackLayout>
        <Grid RowSpacing="25" 
              RowDefinitions="100,300,100,100"
			  Padding="{OnPlatform iOS='30,60,30,30', Default='30'}"
              >
            <Label
				Grid.Row="0"
				FontSize="72"
				HorizontalOptions="Center"
				VerticalOptions="Start"
				x:Name="RoomNameLabel" />

            <Label
				x:Name="EventTitleLabel"
				Grid.Row="1"
				VerticalOptions="End"
				HorizontalOptions="Center" 
                />

            <Label
				x:Name="EventTimeLabel"
				Grid.Row="2"
				FontAttributes="Bold"
				VerticalOptions="Start"
				HorizontalOptions="Center" />

            <Label
				Grid.Row="3"
				FontAttributes="Bold"
				x:Name="DateTimeLabel"
				HorizontalOptions="Center" />
        </Grid>
    </StackLayout>
</ContentPage>
